@model CaioComputers.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout form</h2>
<hr />
<div class="container-lg">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "col-form-label" })
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "jane" })
            @Html.ValidationMessageFor(model=>model.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "col-form-label" })
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "doe" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-form-label" })
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "you@example.com" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "col-form-label" })
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", placeholder = "1234 Main St" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Address2, new { @class = "col-form-label" })
            @Html.TextAreaFor(model => model.Address2, new { @class = "form-control", placeholder = "1234 Main St" })
            @Html.ValidationMessageFor(model => model.Address2)
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Continue to checkout</button>
        </div>
    }
</div>

