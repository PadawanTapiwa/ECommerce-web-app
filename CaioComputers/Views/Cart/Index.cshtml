@model CaioComputers.Models.Cart

@{
    ViewBag.Title = "Index";
}

<h2>Shopping Cart</h2>
<hr />

<div class="container">
    @if (Model.CartLines.Count < 1)
    {
        <div class="alert alert-warning col-md-12"><i class="fa fa-exclamation-circle">you have no items in your cart</i></div>
    }
    else
    {
        <div class="row">

            <table class="table table-responsive-md ">
                <thead>
                    <tr>
                        <th></th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cartLine in Model.CartLines)
                    {
                        <tr>
                            <td><img class="img-fluid" src="@cartLine.Product.Image" width="95" height="150" /></td>
                            <td>@cartLine.Product.Name</td>
                            <td>@cartLine.Product.Price</td>
                            <td>@cartLine.Quantity</td>
                            <td>
                                <a href="@Url.Action("RemoveFromCart", "Cart", new{id=cartLine.Product.Id })" class="btn btn-danger" role="button">delete</a>
                            </td>
                        </tr>
                    }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        Total:(@Model.Total()) <span class="text-danger">R @ViewBag.PriceTotal</span>
                    </td>
                </tr>

                </tbody>
            </table>


        </div>
        <div class="row mt-3">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <a href="@Url.Action("Products","Home")" class="btn btn-outline-success" role="button"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Keep Shopping</a>
                <a href="@Url.Action("CheckOut","Cart")" class="btn btn-outline-success" role="button"><i class="fa fa-thumbs-up" aria-hidden="true"></i> Check out</a>
            </div>
            <div class="col-md-4"></div>
        </div>
    }
</div>